<?xml version="1.0" encoding="UTF-8"?>
<project name="simpledht" default="all">
  
  
  <property file="simpledht.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/*.rbc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.zip"/>
    <include name="*.apk"/>
    <include name="*.war"/>
    <include name="*.egg"/>
    <include name="*.ear"/>
    <include name="*.ane"/>
    <include name="*.swc"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.7" value="${jdk.home.1.7}/bin"/>
  <path id="jdk.classpath.1.7">
    <fileset dir="${jdk.home.1.7}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/jfxrt.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.7}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.7}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.7"/>
  
  <!-- Modules -->
  
  
  <!-- Module simpledht -->
  
  <dirname property="module.simpledht.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.simpledht" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.simpledht" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.simpledht" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.simpledht" value="-encoding UTF-8 -source 1.6 ${compiler.args}"/>
  
  <property name="simpledht.output.dir" value="${module.simpledht.basedir}/out/production/simpledht"/>
  <property name="simpledht.testoutput.dir" value="${module.simpledht.basedir}/out/test/simpledht"/>
  
  <path id="simpledht.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="simpledht.module.production.classpath">
    <path refid="${module.jdk.classpath.simpledht}"/>
  </path>
  
  <path id="simpledht.runtime.production.module.classpath">
    <pathelement location="${simpledht.output.dir}"/>
  </path>
  
  <path id="simpledht.module.classpath">
    <path refid="${module.jdk.classpath.simpledht}"/>
    <pathelement location="${simpledht.output.dir}"/>
  </path>
  
  <path id="simpledht.runtime.module.classpath">
    <pathelement location="${simpledht.testoutput.dir}"/>
    <pathelement location="${simpledht.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.simpledht">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.simpledht">
    <patternset refid="excluded.from.module.simpledht"/>
  </patternset>
  
  <path id="simpledht.module.sourcepath">
    <dirset dir="${module.simpledht.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.simpledht" depends="compile.module.simpledht.production,compile.module.simpledht.tests" description="Compile module simpledht"/>
  
  <target name="compile.module.simpledht.production" description="Compile module simpledht; production classes">
    <mkdir dir="${simpledht.output.dir}"/>
    <javac destdir="${simpledht.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.simpledht}/javac">
      <compilerarg line="${compiler.args.simpledht}"/>
      <bootclasspath refid="simpledht.module.bootclasspath"/>
      <classpath refid="simpledht.module.production.classpath"/>
      <src refid="simpledht.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.simpledht"/>
    </javac>
    
    <copy todir="${simpledht.output.dir}">
      <fileset dir="${module.simpledht.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.simpledht.tests" depends="compile.module.simpledht.production" description="compile module simpledht; test classes" unless="skip.tests"/>
  
  <target name="clean.module.simpledht" description="cleanup module">
    <delete dir="${simpledht.output.dir}"/>
    <delete dir="${simpledht.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.simpledht" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.simpledht" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>

  <target name="build-jar" depends="all">
    <mkdir dir="out/jar"/>
    <jar destfile="out/jar/simpledht.jar"
         basedir="${simpledht.output.dir}">
      <manifest>
        <attribute name="Main-Class" value="com.isikun.firat.dht.simplified.Main"/>
      </manifest>
    </jar>
  </target>

  <target name="run1">
    <java jar="out/jar/simpledht.jar" fork="true">
      <sysproperty key="configFile"  value="config.properties"/>
    </java>
  </target>

  <target name="run2">
    <java jar="out/jar/simpledht.jar" fork="true">
      <sysproperty key="configFile"  value="config2.properties"/>
    </java>
  </target>

  <target name="run3">
    <java jar="out/jar/simpledht.jar" fork="true">
      <sysproperty key="configFile"  value="config3.properties"/>
    </java>
  </target>

  <target name="run4">
    <java jar="out/jar/simpledht.jar" fork="true">
      <sysproperty key="configFile"  value="config4.properties"/>
    </java>
  </target>
</project>